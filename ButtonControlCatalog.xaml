<UserControl x:Class="IELTSAppProject.ButtonControlCatalog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IELTSAppProject"
             mc:Ignorable="d" 
             d:DesignHeight="68" d:DesignWidth="750">
    <Grid>
        <Button Content="Button" Height="68" x:Name="collection" Click="collection_Click" Width="750">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="25"  Background="#0078D7"  BorderThickness="0">
                        <ContentPresenter 
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Конвертировать в docx" Foreground="White" Height="34" Width="167" HorizontalAlignment="Left" Margin="568,17,0,17" x:Name="convertCollection" Click="convertCollection_Click" FontSize="12"/>
    </Grid>
</UserControl>

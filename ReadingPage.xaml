<Page x:Class="IELTSAppProject.ReadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IELTSAppProject"
      mc:Ignorable="d" 
       d:DesignHeight="700" d:DesignWidth="1165"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  Title="IELTS App" Height="700" Width="1165">

    <Grid x:Name="readingPart"  Background="#FFB840" MaxWidth="1900" MinWidth="400" MaxHeight="1000" MinHeight="300" Height="700">
        <Button Content="Вернуться назад" HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="170" Background="#FF35C0CD" Style="{StaticResource MaterialDesignFlatButton}" Click="turnBack_Click" FontSize="17" FontWeight="Bold" x:Name="turnBack"/>
        <Button Grid.Row="0" HorizontalAlignment="Left" Margin="257,0,0,0" Width="223" Height="58" VerticalAlignment="Top" FontSize="17" x:Name="convertToDocx" Click="convertToDocx_Click" Content="Конвертировать в docx"/>
        <Button Grid.Row="0" HorizontalAlignment="Left" Margin="560,0,0,0" Width="223" Height="58" VerticalAlignment="Top" FontSize="17" Content="Добавить в подборку" x:Name="addToCollection" Click="Button_Click"/>
        <Border MinWidth="400" MaxWidth="1900" Background=" #514ED9" Padding="30" CornerRadius="20" Margin="0,85,0,0" Height="568" Width="886">
            <ScrollViewer Style="{StaticResource MaterialDesignScrollViewer}" Margin="0,0,4,0">
                <StackPanel RenderTransformOrigin="0.5,0.5" Margin="10,25,-14,-5" Height="1234">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.156"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-1.081"/>
                        </TransformGroup>
                    </StackPanel.RenderTransform>
                    <TextBlock FontSize="20" Text="{Binding NumAndTask}" x:Name="numAndTask" TextWrapping="Wrap" LineHeight="6" Height="42" Width="787" HorizontalAlignment="Left"/>
                    <TextBlock FontSize="18" Text="{Binding TaskText}" x:Name="textTask" TextWrapping="Wrap" LineHeight="6" Height="269" Width="793" HorizontalAlignment="Left"/>
                    <TextBlock FontSize="18" Text="{Binding task1}" x:Name="textTask1" TextWrapping="Wrap" LineHeight="6" Height="39" Width="778"/>
                    <ComboBox Width="200" x:Name="answer1" HorizontalAlignment="Left" Background="#FFCB73">
                        <ComboBoxItem Content="True"/>
                        <ComboBoxItem Content="False"/>
                        <ComboBoxItem Content="Not Stated"/>
                    </ComboBox>
                    <TextBlock FontSize="18" Text="{Binding task2}" x:Name="textTask2" Height="44" TextWrapping="Wrap" LineHeight="6" Width="778"/>
                    <ComboBox Width="200" x:Name="answer2" HorizontalAlignment="Left" Background="#FFCB73">
                        <ComboBoxItem Content="True"/>
                        <ComboBoxItem Content="False"/>
                        <ComboBoxItem Content="Not Stated"/>
                    </ComboBox>
                    <TextBlock FontSize="18" Text="{Binding task3}" x:Name="textTask3" Height="44" TextWrapping="Wrap" LineHeight="6" Width="781"/>
                    <ComboBox Width="200" x:Name="answer3" HorizontalAlignment="Left" Background="#FFCB73">
                        <ComboBoxItem Content="True"/>
                        <ComboBoxItem Content="False"/>
                        <ComboBoxItem Content="Not Stated"/>
                    </ComboBox>
                    <TextBlock FontSize="18" Text="{Binding task4}" x:Name="textTask4" Height="48" TextWrapping="Wrap" LineHeight="6" Width="766"/>
                    <ComboBox Width="200" x:Name="answer4" HorizontalAlignment="Left" Background="#FFCB73">
                        <ComboBoxItem Content="True"/>
                        <ComboBoxItem Content="False"/>
                        <ComboBoxItem Content="Not Stated"/>
                    </ComboBox>
                    <TextBlock FontSize="18" Text="{Binding task5}" x:Name="textTask5" Height="57" TextWrapping="Wrap" LineHeight="6" Width="773"/>
                    <ComboBox Width="200" x:Name="answer5" HorizontalAlignment="Left" Background="#FFCB73">
                        <ComboBoxItem Content="True"/>
                        <ComboBoxItem Content="False"/>
                        <ComboBoxItem Content="Not Stated"/>
                    </ComboBox>
                    
                <StackPanel Margin="20,0,0,0">
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="{Binding task6}" 
                               TextWrapping="Wrap"/>
                        <RadioButton Content="A. A nuclear war" Margin="20,5,0,0"/>
                        <RadioButton Content="B. A global pandemic" Margin="20,0,0,0"/>
                        <RadioButton Content="C. A natural disaster" Margin="20,0,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="{Binding task7}" 
                               TextWrapping="Wrap"/>
                        <RadioButton Content="{Binding}" Margin="20,5,0,0"/>
                        <RadioButton Content="B. It doesn't exist at all" Margin="20,0,0,0"/>
                        <RadioButton Content="C. It only exists in certain countries" Margin="20,0,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="{Binding task8}" 
                               TextWrapping="Wrap"/>
                        <RadioButton Content="A. The WHO" Margin="20,5,0,0"/>
                        <RadioButton Content="B. The UN" Margin="20,0,0,0"/>
                        <RadioButton Content="C. Médecins Sans Frontières" Margin="20,0,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="{Binding task9}" 
                               TextWrapping="Wrap"/>
                        <RadioButton Content="A. A cure was found quickly" Margin="20,5,0,0"/>
                        <RadioButton Content="B. People were provided with protective gear" Margin="20,0,0,0"/>
                        <RadioButton Content="C. The virus did not spread through urban areas" Margin="20,0,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="{Binding task0}" 
                               TextWrapping="Wrap"/>
                        <RadioButton Content="A. Through satellite maps" Margin="20,5,0,0"/>
                        <RadioButton Content="B. Through street cameras" Margin="20,0,0,0"/>
                        <RadioButton Content="C. Through cell phones" Margin="20,0,0,0"/>
                    </StackPanel>
                </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>

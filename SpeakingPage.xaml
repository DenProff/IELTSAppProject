<Page x:Class="IELTSAppProject.SpeakingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IELTSAppProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="SpeakingPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="41*" />
            <RowDefinition Height="139*" />
            <RowDefinition Height="90*" />
            <RowDefinition Height="90*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="213*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" VerticalAlignment="Center" Height="24">
            №
        </TextBox >
        <TextBox Grid.Column="1" VerticalAlignment="Center" Height="24">
            id 11111
        </TextBox >
        <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,0" Width="190">
            Конвертировать в docx
        </Button>
        <Button Grid.Column="4" Grid.Row="0" Margin="0,4,0,5">
            Поделиться
        </Button>
        <Button Grid.Column="6" Grid.Row="0" Margin="0,4,0,5">
            Добавить в подборку
        </Button>
        <TextBox Grid.Column="8" VerticalAlignment="Center" Height="32">
            Рекоменд. время выполнения:
        </TextBox >
    </Grid>
</Page>

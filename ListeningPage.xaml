<Page x:Class="IELTSAppProject.ListeningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IELTSAppProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListeningPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="13*" />
            <RowDefinition Height="47*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="126*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="255*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" VerticalAlignment="Center" Height="26">
            №
        </TextBox >
        <TextBox Grid.Column="1" VerticalAlignment="Center" Height="26">
            id 11111
        </TextBox >
        <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" Width="144" Margin="0,4,0,3">
            Конвертировать в docx
        </Button>
        <Button Grid.Column="4" Grid.Row="0" Margin="0,4,0,3">
            Поделиться
        </Button>
        <Button Grid.Column="6" Grid.Row="0" Margin="0,4,0,3">
            Добавить в подборку
        </Button>
        <TextBox Grid.Column="8" VerticalAlignment="Center" Height="18">
            Рекоменд. время выполнения:
        </TextBox >
        <local:SimpleAudioPlayer AudioPath="cocoJambo.mp3" Margin="19,48,0,38" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="6" Width="314" Grid.ColumnSpan="3"/>
    </Grid>
</Page>

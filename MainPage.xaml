<Page x:Class="IELTSAppProject.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IELTSAppProject"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1177"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  Title="IELTS App" Height="800" Width="1300">
    <Grid x:Name="mainScreen" Background="#FFB840" MaxWidth="1900" MinWidth="400" MaxHeight="1000" MinHeight="300"  Height="700" Width="1177" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="647*"/>
            <ColumnDefinition Width="453*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontFamily="Arial Black" FontSize="22" Opacity="0.995" 
           LineHeight="6" Margin="216,97,217,0" x:Name="welcome" TextAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="50" >
    <Run Text="Добро пожаловать в приложение для подготовк"/><Run Language="ru-ru" Text="и"/><LineBreak/>
    <Run Language="ru-ru"/><Run Text=" к экзамену"/><Run Text=" в формате IELTS"/></TextBlock>
        <Button Content="У меня мало времени&#xD;&#xA;       до экзамена!" HorizontalAlignment="Left" Margin="140,323,0,0" Height="165" Width="260" Click="Button_Click" x:Name="lessTime" FontSize="20" FontFamily="Medium" FontWeight="Medium" VerticalAlignment="Top" Background="#FF35C0CD"/>
        <Button Content="Найти задания для &#xD;&#xA;   своих учеников" HorizontalAlignment="Left" Margin="89,323,0,0" VerticalAlignment="Top" Height="165" Width="260" Click="Button_Click_1" FontWeight="Medium" x:Name="teacherMode" FontSize="20" Grid.Column="1" Background="#FF35C0CD"/>
        <Button Content="Начать (продолжить)&#xD;&#xA;        подготовку" HorizontalAlignment="Left" Margin="458,323,0,0" VerticalAlignment="Top" Height="165" Width="260" Click="Button_Click_3" FontWeight="Medium" x:Name="continueWork" FontSize="20" Background="#FF35C0CD" Grid.ColumnSpan="2"/>
        <TextBlock Text="Выберите режим, который вам необходим" FontFamily="Arial Black" FontSize="22" Opacity="0.995" LineHeight="6" Margin="104,176,105,491" x:Name="chooseModule" TextAlignment="Center" Grid.ColumnSpan="2" />
        <Button Content="Выбор языка" HorizontalAlignment="Left" Margin="328,0,0,0" VerticalAlignment="Top" Height="97" Width="157" FontWeight="Bold" Click="Button_Click_4" x:Name="chooseLanguage" RenderTransformOrigin="0.489,0.488" Grid.Column="1" FontSize="18" Background="#FF35C0CD" Style="{StaticResource MaterialDesignFlatButton}"/>
        <Button Content="Помощь" HorizontalAlignment="Left" Margin="0,642,0,0" VerticalAlignment="Top" Height="58" Width="99" Background="#F13C73" BorderThickness="2" x:Name="help" Click="help_Click"/>
    </Grid>
</Page>

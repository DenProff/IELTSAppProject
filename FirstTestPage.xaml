<Page x:Class="IELTSAppProject.FirstTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IELTSAppProject"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="IELTS App" Height="470" Width="795">
    <Grid x:Name="firstTest" Background="#FFB840" MaxWidth="1900" MinWidth="400" MaxHeight="1000" MinHeight="300" Margin="0,0,-452,-258">
        <Border MinWidth="400" MaxWidth="1900" Background=" #514ED9" Padding="30" VerticalAlignment="Top" HorizontalAlignment="Center" CornerRadius="20" Margin="0,85,0,0" Height="219">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="LightBlue" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel Height="188" RenderTransformOrigin="0.498,0.684">
                <TextBlock FontSize="18" FontWeight="Bold" Margin="0 0 0 20" Height="160" TextAlignment="Center" Foreground="#FFFAF5F5" FontFamily="Palatino Linotype"><Run Text="Для начала работы советуем вам пройти входное тестирование, "/><LineBreak/><Run Text="чтобы мы могли собрать статистику и вы увидели какие"/><LineBreak/><Run Text=" задания у вас получаются хуже"/><LineBreak/><Run/><LineBreak/><Run Text="Если вы уже решали входной тест, можете продолжить "/><LineBreak/><Run Text="работу с нужными вам заданиями"/></TextBlock>
            </StackPanel>
        </Border>
        <Button Content="Решать входной вариант" HorizontalAlignment="Left" Margin="240,393,0,0" VerticalAlignment="Top" Height="134" Width="261" Background="#FF35C0CD" Click="Button_Click" FontSize="16" x:Name="testVar"/>
        <Button Content="Работать по своему усмотрению&#xD;&#xA;   (не решать входной вариант)" HorizontalAlignment="Left" Margin="831,393,0,0" VerticalAlignment="Top" Height="134" Width="268" Background="#FF35C0CD" Click="Button_Click_1" FontWeight="SemiBold" FontSize="15" x:Name="continue"/>
        <Button Content="Вернуться назад" HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="165" Background="#FF35C0CD" Style="{StaticResource MaterialDesignFlatButton}" Click="Button_Click_2" FontSize="16" FontWeight="Bold" x:Name="turnBack"/>
    </Grid>
</Page>

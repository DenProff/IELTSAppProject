<Page x:Class="IELTSAppProject.CollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:IELTSAppProject"
      Title="Combined Tasks"
      Background="WhiteSmoke">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Speaking Task -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="5" Background="White">
                <Frame x:Name="SpeakingFrame" 
                       NavigationUIVisibility="Hidden" 
                       Height="500"/>
            </Border>

            <!-- Listening Task -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="5" Background="White">
                <Frame x:Name="ListeningFrame" 
                       NavigationUIVisibility="Hidden" 
                       Height="600"/>
            </Border>

            <!-- Writing Task -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="5" Background="White">
                <Frame x:Name="WritingFrame" 
                       NavigationUIVisibility="Hidden" 
                       Height="500"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
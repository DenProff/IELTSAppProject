<Page x:Class="IELTSAppProject.ChooseModulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IELTSAppProject"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1177"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="IELTS App" Height="700" Width="1165">
    <Grid x:Name="chosingModule"  Background="#FFB840" MaxWidth="1900" MinWidth="400" MaxHeight="1000" MinHeight="300" Height="700">
        <Button Content="{DynamicResource prevPage}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="170" Background="#FF35C0CD" Style="{StaticResource MaterialDesignFlatButton}" Click="turnBack_Click" FontSize="17" FontWeight="Bold" x:Name="turnBack"/>
        <Button Content="{DynamicResource myStatistics}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="170" Background="#FF35C0CD" Style="{StaticResource MaterialDesignFlatButton}" Click="statistic_Click" FontSize="17" FontWeight="Bold" x:Name="statistic" Margin="232,0,0,0"/>
        <Button Content="{DynamicResource myMistakes}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="170" Background="#FF35C0CD" Style="{StaticResource MaterialDesignFlatButton}" Click="mistakes_Click" FontSize="17" FontWeight="Bold" x:Name="mistakes" Margin="484,0,0,0"/>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="170" Background="#FF35C0CD"
                Style="{StaticResource MaterialDesignFlatButton}" Click="collections_Click" FontSize="17" FontWeight="Bold" x:Name="collections"
                Margin="736,0,0,0">
            <TextBlock Text="{DynamicResource myCollections}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Button>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="170"
                Background="#FF35C0CD" Style="{StaticResource MaterialDesignFlatButton}" Click="language_Click" FontSize="17" FontWeight="Bold"
                x:Name="language" Margin="1007,0,0,0">
            <TextBlock Text="{DynamicResource chooseLanguage}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Button>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="206" Width="338" Background="#FF35C0CD" Click="varOfExam_Click" FontSize="19" x:Name="varOfExam">
            <TextBlock Text="{DynamicResource solveIELTSformat}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="792,0,0,0" VerticalAlignment="Center" Height="206" Width="336" Background="#FF35C0CD" Click="testVar_Click" FontWeight="SemiBold" FontSize="19" x:Name="testVar">
            <TextBlock Text="{DynamicResource solveEnterVariantBTN}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="42,0,0,0" VerticalAlignment="Center" Height="206" Width="336" Background="#FF35C0CD" Click="moduleTasks_Click" FontWeight="SemiBold" FontSize="17" x:Name="moduleTasks">
            <TextBlock Text="{DynamicResource tasksByType}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Button>
        <Button Content="{DynamicResource help}" HorizontalAlignment="Left" Margin="0,642,0,0" VerticalAlignment="Top" Height="58" Width="99" Background="#F13C73" BorderThickness="2" x:Name="help" Click="help_Click"/>

    </Grid>
</Page>

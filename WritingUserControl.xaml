<UserControl x:Class="IELTSAppProject.WritingUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IELTSAppProject"
      mc:Ignorable="d" 
      Width="1650" 
      Height="550"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="54*" />
            <RowDefinition Height="53*" />
            <RowDefinition Height="64*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="219*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="362*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="218*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="358*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="302*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="idTextBox" Grid.Column="1" VerticalAlignment="Center" Height="32" FontSize="20">id</TextBlock>

        <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" FontSize="20" Height="40" Margin="0,13,0,13" Width="268" x:Name="writingConvert">
            Конвертировать в docx
        </Button>
        <Button Grid.Column="5" Grid.Row="0" Margin="20,9,2,17" Grid.ColumnSpan="3" FontSize="20" Height="40">Добавить в подборку</Button>

        <TextBlock x:Name="recommendedTimeTextBlock" Grid.Column="8" Grid.ColumnSpan="2" Margin="10" VerticalAlignment="Center" Height="32" FontSize="20">
            Рекоменд. время выполнения:
        </TextBlock>

        <TextBlock x:Name="taskTextBlock" Grid.Column="1" Grid.Row="2" FontSize="20" Grid.ColumnSpan="8" Margin="0,0,0,41" HorizontalAlignment="Left" Width="1218"><Run Language="ru-ru" Text="Задание"/></TextBlock>
        <TextBlock x:Name="topicTextBlock" Grid.Column="1" Grid.Row="1" FontSize="20" VerticalAlignment="Center" Height="30">Тема</TextBlock>
        <ComboBox x:Name="topicsComboBox" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="6" Height="30" Margin="10,0,6,0">
        </ComboBox>
        <Button Grid.Column="9" Grid.Row="1" HorizontalAlignment="Center" Width="200" Margin="0,15,0,10" FontSize="20" Height="40" Click="SaveTopic">Сохранить выбор</Button>
        <TextBox x:Name="answeField" FontSize="20" TextWrapping="Wrap" AcceptsReturn="True" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="8" materialDesign:HintAssist.Hint="Перед написанием эссе выберите тему выше" Margin="0,45,0,10" Grid.RowSpan="3"/>
        <Button x:Name="saveAnswer" Grid.Column="9" Grid.Row="4" HorizontalAlignment="Center" Width="282" FontSize="20" Height="40" Content="Сохранить ответ" Margin="0,10,0,218" Click="SaveAnswer"/>
        <Button x:Name="showIdealEssay" Grid.Column="9" Grid.Row="4" HorizontalAlignment="Center" Width="282" FontSize="20" Height="40" Content="Смотреть эссе на макс." Margin="0,173,0,55" Click="ShowIdealEssay"/>
        <Button x:Name="showUsersEssay" Grid.Column="9" Grid.Row="4" HorizontalAlignment="Center" Width="282" FontSize="20" Height="40" Content="Смотреть своё эссе" Margin="0,218,0,10" Click="ShowUsersEssay"/>
        <TextBlock x:Name="infoTextBox" Background="Red"  Grid.Column="9" HorizontalAlignment="Center" Margin="0,72,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="83" Width="282"><Run Language="ru-ru" Text="Просмотр эссе можно будет выполнять только после сохранения собственного"/></TextBlock>
        <Button Content="Помощь" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="58" Width="128" Background="#F13C73" BorderThickness="2" x:Name="help" Click="help_Click" Grid.Row="3" Grid.Column="9"/>
    </Grid>
</UserControl>